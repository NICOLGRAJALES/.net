@model Proyecto1.Models.Producto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
  <h4 class="text-center" style="color: #d63384;">Productos</h4>
  <hr style="border-color: #d63384;" />
  <div class="container">
     <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="bg-light p-4 border rounded shadow" style="background-color: #f8d3e2;">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Nombre" class="control-label" style="color: #d63384;"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el producto" style="border-color: #d63384;" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label" style="color: #d63384;"></label>
                    <input asp-for="Descripcion" class="form-control" style="border-color: #d63384;" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Crear" class="btn" style="background-color: #d63384; color: white;" />
                </div>
            </form>
        </div>
     </div>
  </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-link" style="color: #d63384;">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
