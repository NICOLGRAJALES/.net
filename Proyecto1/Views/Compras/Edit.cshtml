@model Proyecto1.Models.Compra

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center text-pink">Compras</h4>
<hr class="border-pink" />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" class="bg-light p-4 border rounded shadow" style="background-color: #f8d3e1;">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="IdCliente" class="control-label" style="color: #d63389;"></label>
                    <input asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente" style="border-color: #d63384;" />
                    <span asp-validation-for="IdCliente" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdProducto" class="control-label" style="color: #d63384;"></label>
                    <input asp-for="IdProducto" class="form-control" style="border-color: #d63384;" />
                    <span asp-validation-for="IdProducto" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Cantidad" class="control-label" style="color: #d63389;"></label>
                    <input asp-for="Cantidad" class="form-control" style="border-color: #d63384;" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FechaCompra" class="control-label" style="color: #d63384;"></label>
                    <input asp-for="FechaCompra" class="form-control" type="date" style="border-color: #d63384;" />
                    <span asp-validation-for="FechaCompra" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-pink btn-block" style="background-color: #d63384; color: white;" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn" style="background-color: #f8d3e2; color: #d63384; border: none; text-decoration: none; padding: 10px 20px; border-radius: 5px;">Volver a la lista</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
